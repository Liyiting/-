/* components/search/search.wxss */
.nav {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 100rpx;
}
.nav .logo {
  position: relative;
  display: inline-block;
  height: 60%;
  width: 60rpx;
  border-radius:  30rpx;
}
.nav input {
  display: inline-block;
  height: 60%;
  width: 64%;
  padding-left: 20rpx;
  font-size: 30rpx;
  background-color: #fff;
  border-radius: 40rpx;
}
.nav .cart {
  display: inline-block;
  height: 80%;
  width: 80rpx;
  position: relative;
}
.nav .cart-num {
  width: 40rpx;
  height: 40rpx;
  font-size: 26rpx;
  font-weight: bolder;
  line-height: 40rpx;
  color: #ffffff;
  text-align: center;
  border-radius: 20rpx;
  background-color: rgba(160,82,45,.7);
  position: absolute;
  top: 0;
  right: 0;
}
.block {
  position: absolute;
  top: 120rpx;
  left: 10%;
  width: 80%;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, .8);
  border: 2rpx solid rgba(218, 30, 47, .8);
  border-top: none;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
}

.title {
  color: #777777;
  font-size: 30rpx;
}
.history-item {
  display: inline-block;
  margin-right: 20rpx;
  font-size: 35rpx;
  color: #000000;
  background-color: #ffffff;
  /* border: 2rpx solid #da1e2f; */
}
.history-item::after {
  content: 'x';
  position: relative;
  left: 6rpx;
  color: #777777;
  background-color: #ffffff;
}
.hot {
  margin-top: 20rpx;
}
.hot-item {
  display: inline-block;
  margin-right: 20rpx;
  padding: 0 6rpx;
  font-size: 35rpx;
  color: #000000;
  background-color: #ffffff;
  border: 2rpx solid #f8d2d5;
  border-radius: 10rpx;
  /* border: 2rpx solid #da1e2f; */
}