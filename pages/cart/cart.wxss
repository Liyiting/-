/* pages/cart/cart.wxss */
.nav {
  position: relative;
  height: 100rpx;
  width: 100%;
  text-align: center;
  font-size: 35rpx;
  line-height: 100rpx;
}
.arrow {
  position: absolute;
  left: 60rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.arrow::before {
  content: '';
  position: absolute;
  left: -50rpx;
  top: 32rpx;
  width: 0;
  height: 0;
  border-top: 18rpx solid transparent;
  border-bottom: 18rpx solid transparent;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid #000000;
}
.arrow:after {
  content: '';
  position: absolute;
  left: -46rpx;
  top: 32rpx;
  width: 0;
  height: 0;
  border-top: 18rpx solid transparent;
  border-bottom: 18rpx solid transparent;
  border-left: 18rpx solid transparent;
  border-right: 18rpx solid #f7f7fa;
}
.stuff {
  width: 100%;
}
.item {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 200rpx;
  background-color: #ffffff;
  border-bottom: 2rpx solid #dddddd;
}
.item:last-child {
  border-bottom: none;
} 
.item image {
  height: 160rpx;
  width: 160rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.number-bar view {
  display: inline-block;
}
.minus,
.plus {
  height: 40rpx;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #dddddd;
}
.number {
  margin: 0 10rpx;
}
.total {
  position: relative;
  width: 100%;
  height: 80rpx;
  padding-right: 40rpx;
  color: #da1e2f;
  line-height: 80rpx;
  text-align: right;
}
.total::before {
  content: '总价：';
  position: absolute;
  left: 50%;
  font-size: 28rpx;
  color: #777777;
}
.checkout {
  width: 80%;
  height: 80rpx;
  margin-top: 20rpx;
  color: #ffffff;
  line-height: 80rpx;
  text-align: center;
  background-color: #da1e2f;
  border-radius: 10rpx;
}